<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joynappclient">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".application.JoynApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />


        <activity android:name=".ui.authentication.signup.SignUpActivity"></activity>
        <activity android:name=".ui.authentication.signin.SignInActivity" />
        <activity android:name=".ui.authentication.welcome_to_app.WelcomeToAppActivity" />
        <activity android:name=".ui.j_food.cart.CartActivity" />
        <activity android:name=".ui.j_food.detail.DetailJFoodActivity" />
        <activity android:name=".ui.j_food.food.JFoodActivity" />
        <activity android:name=".ui.booking.BookingActivity" />
        <activity android:name=".ui.authentication.otp.OtpActivity" />
        <activity android:name=".ui.main_menu.MainMenuActivity" />
        <activity android:name=".ui.booking.checkout.CheckoutActivity" />
        <activity android:name=".ui.booking.paymen.PaymenRideActivity" />
        <activity android:name=".ui.booking.paymen.PaymenCarActivity" />
        <activity android:name=".ui.booking.pickup.PickupActivity" />
        <activity android:name=".ui.booking.BindingActivity" />
        <activity android:name=".ui.main_menu.order.history.HistoryActivity" />
        <activity
            android:name=".ui.splashscreen.SplashScreen"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
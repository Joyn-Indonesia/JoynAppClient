<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.booking.paymen.PaymenCarActivity">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/toscaBottom"
        app:cardCornerRadius="@dimen/_16sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_content"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:padding="@dimen/_8sdp"
                android:scaleType="fitXY"
                android:src="@drawable/j_ride" />

            <TextView
                android:id="@+id/tv_distance_and_time"
                style="@style/StyleTextViewDefault"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toEndOf="@id/image_content"
                android:padding="@dimen/_1sdp"
                tools:text="@string/j_ride" />

            <TextView
                android:id="@+id/tv_discount_cost"
                style="@style/StyleTextViewDefault"
                android:layout_below="@id/tv_distance_and_time"
                android:layout_toEndOf="@id/image_content"
                android:padding="@dimen/_1sdp"
                android:textColor="@color/greenYoung"
                tools:text="@string/rp_25_000" />

            <TextView
                android:id="@+id/tv_total_cost"
                style="@style/StyleTextViewDefault.Bold"
                android:layout_below="@id/tv_discount_cost"
                android:layout_toEndOf="@id/image_content"
                android:padding="@dimen/_1sdp"
                android:textColor="@color/greenDarkerMain"
                tools:text="@string/rp_25_000" />


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/include4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_select_paymen_layout"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/_8sdp" />

    <View
        android:id="@+id/extraSpace"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


</LinearLayout>
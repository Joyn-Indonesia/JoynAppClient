<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main_menu.account.AccountFragment">

    <include
        android:id="@+id/include3"
        layout="@layout/toolbar_blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_4sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_profil_name"
                style="@style/StyleTextViewDefault.Bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/_4sdp"
                android:textSize="@dimen/default_text"
                tools:text="@string/your_name" />

            <TextView
                android:id="@+id/tv_number_profil"
                style="@style/StyleTextViewDefault"
                android:layout_below="@id/tv_profil_name"
                android:padding="@dimen/_4sdp"
                tools:text="0812345678" />

            <TextView
                style="@style/StyleTextViewDefault"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_4sdp"
                android:text="@string/edit"
                android:textColor="@color/greenYoung" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/greenYoung"
        android:elevation="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:rippleColor="@color/halfBlack">

        <TextView
            style="@style/StyleTextViewDefault.Bold"
            android:layout_width="match_parent"
            android:padding="@dimen/_10sdp"
            android:text="@string/logout"
            android:textAlignment="center"
            android:textSize="@dimen/extra_big_text" />

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>
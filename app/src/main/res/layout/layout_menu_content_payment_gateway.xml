<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectagle_line_stroke"
    android:padding="@dimen/margin_8dp">

    <LinearLayout
        android:id="@+id/payment_dana"
        style="@style/StylePaymentGatewayHome"
        app:layout_constraintBottom_toBottomOf="@+id/payment_ovo"
        app:layout_constraintEnd_toStartOf="@+id/payment_ovo"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/payment_ovo">

        <ImageView
            style="@style/StylePaymentGatewayHomeImage"
            android:src="@drawable/logo_dana" />

        <TextView
            style="@style/StylePaymentGatewayHomeText"
            android:text="@string/rp_25_000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment_ovo"
        style="@style/StylePaymentGatewayHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            style="@style/StylePaymentGatewayHomeImage"
            android:src="@drawable/logo_ovo" />

        <TextView
            style="@style/StylePaymentGatewayHomeText"
            android:text="@string/rp_25_000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment_topUp"
        style="@style/StylePaymentGatewayHome"
        app:layout_constraintBottom_toBottomOf="@+id/payment_ovo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toEndOf="@+id/payment_ovo"
        app:layout_constraintTop_toTopOf="@+id/payment_ovo">

        <ImageView
            style="@style/StylePaymentGatewayHomeImage"
            android:src="@drawable/icon_topup" />

        <TextView
            style="@style/StylePaymentGatewayHomeText"
            android:text="@string/top_up" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Splash Screen-->

    <!--    TextVIew Style -->
    <style name="StyleTextViewDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/default_text</item>
    </style>

    <style name="StyleTextViewDefault.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleTextViewDefault.Bold.padding">
        <item name="android:padding">@dimen/_2sdp</item>
    </style>

    <style name="StyleTextViewDefault.Black">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="StyleTextViewDefault.ContentBanner">
        <item name="android:textSize">@dimen/medium_small_text</item>
        <item name="android:textColor">@color/black80</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--    end Style TextVIew  -->

    <!--    Edit Text Style -->
    <style name="InputEditTextContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
    </style>

    <style name="InputEditTextContent.Register">
        <item name="boxBackgroundMode">none</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="EditTextInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EditTextInputStyle.Register">
        <item name="android:background">@drawable/edittext_bottom_line</item>
    </style>
    <!--    end Edit Text -->

    <!--   Material Button Style  -->
    <style name="StyleMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleMaterialButton.ButtonSignIn">
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="backgroundTint">@color/toscaLevel3</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/greenDarkerMain</item>
        <item name="android:textSize">@dimen/medium_small_text</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="rippleColor">@color/greenYoung</item>
        <item name="android:backgroundTint">@color/toscaLevel3</item>
    </style>

    <style name="StyleMaterialButton.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleMaterialButton.disabled" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/background_button_disable</item>
    </style>
    <!--    end button style  -->

    <!-- style payment gateway home -->
    <style name="StylePaymentGatewayHome">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="StylePaymentGatewayHomeImage">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="StylePaymentGatewayHomeText">
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--    end style-->

    <!--    style menu service-->
    <style name="LayoutCardvieMainMenu" parent="Widget.MaterialComponents.CardView">
        <item name="rippleColor">@color/toscaLevel3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="LayoutContentMenuImage">
        <!--        <item name="android:background">@drawable/shadow_background</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <!--        <item name="android:padding">@dimen/_12sdp</item>-->
        <item name="android:paddingTop">@dimen/_20sdp</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
        <item name="android:paddingRight">@dimen/_20sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
        <item name="android:contentDescription">@string/menu_icon</item>
    </style>

    <style name="LayoutContentMenuText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black80</item>
    </style>
    <!--    end menu service-->


</resources>
